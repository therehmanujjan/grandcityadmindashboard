# Production Environment Configuration
NODE_ENV=production
APP_ENV=production

# Application Settings
APP_NAME=Guest Pass System
APP_URL=https://guest-pass-system.vercel.app
APP_DEBUG=false

# API Configuration
API_BASE_URL=https://guest-pass-system.vercel.app/api
API_TIMEOUT=10000

# Database Configuration (Use production database)
DB_HOST=prod-db-host
DB_PORT=5432
DB_NAME=guest_pass_prod
DB_USER=prod_user
DB_PASSWORD=${PROD_DB_PASSWORD}

# Redis Configuration
REDIS_HOST=prod-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}

# Security Settings (Use environment variables)
JWT_SECRET=${PROD_JWT_SECRET}
CORS_ORIGIN=https://guest-pass-system.vercel.app
SESSION_SECRET=${PROD_SESSION_SECRET}

# QR Code Settings
QR_CODE_SIZE=256
QR_CODE_MARGIN=2
QR_CODE_ERROR_LEVEL=M

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/uploads/production

# Email Configuration (Use production email service)
SMTP_HOST=${PROD_SMTP_HOST}
SMTP_PORT=${PROD_SMTP_PORT}
SMTP_SECURE=true
SMTP_USER=${PROD_SMTP_USER}
SMTP_PASSWORD=${PROD_SMTP_PASSWORD}

# Monitoring and Logging
LOG_LEVEL=error
SENTRY_DSN=${PROD_SENTRY_DSN}
GA_TRACKING_ID=${PROD_GA_TRACKING_ID}

# Feature Flags
ENABLE_QR_SCANNER=true
ENABLE_WALK_IN_REGISTRATION=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_NOTIFICATIONS=true

# Camera Settings
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Local Storage Settings
LOCAL_STORAGE_PREFIX=guest_pass_prod_
LOCAL_STORAGE_EXPIRY=86400000

# Security Headers
CSP_ENABLED=true
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: https://www.google-analytics.com; connect-src 'self' https://api.production.com https://www.google-analytics.com;"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Session Configuration
SESSION_MAX_AGE=3600000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/guest-pass.crt
SSL_KEY_PATH=/etc/ssl/private/guest-pass.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CDN_ENABLED=true
CDN_URL=https://cdn.guest-pass-system.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000