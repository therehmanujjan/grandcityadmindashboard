# Staging Environment Configuration
NODE_ENV=staging
APP_ENV=staging

# Application Settings
APP_NAME=Guest Pass System (Staging)
APP_URL=https://guest-pass-staging.vercel.app
APP_DEBUG=false

# API Configuration
API_BASE_URL=https://guest-pass-staging.vercel.app/api
API_TIMEOUT=15000

# Database Configuration (Use staging database)
DB_HOST=staging-db-host
DB_PORT=5432
DB_NAME=guest_pass_staging
DB_USER=staging_user
DB_PASSWORD=staging_password

# Redis Configuration
REDIS_HOST=staging-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password

# Security Settings (Use environment variables)
JWT_SECRET=${STAGING_JWT_SECRET}
CORS_ORIGIN=https://guest-pass-staging.vercel.app
SESSION_SECRET=${STAGING_SESSION_SECRET}

# QR Code Settings
QR_CODE_SIZE=256
QR_CODE_MARGIN=2
QR_CODE_ERROR_LEVEL=M

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/uploads/staging

# Email Configuration (Use staging email service)
SMTP_HOST=${STAGING_SMTP_HOST}
SMTP_PORT=${STAGING_SMTP_PORT}
SMTP_SECURE=true
SMTP_USER=${STAGING_SMTP_USER}
SMTP_PASSWORD=${STAGING_SMTP_PASSWORD}

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=${STAGING_SENTRY_DSN}
GA_TRACKING_ID=${STAGING_GA_TRACKING_ID}

# Feature Flags
ENABLE_QR_SCANNER=true
ENABLE_WALK_IN_REGISTRATION=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_NOTIFICATIONS=true

# Camera Settings
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Local Storage Settings
LOCAL_STORAGE_PREFIX=guest_pass_staging_
LOCAL_STORAGE_EXPIRY=86400000

# Security Headers
CSP_ENABLED=true
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.staging.com;"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_MAX_AGE=3600000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true